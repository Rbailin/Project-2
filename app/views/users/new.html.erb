<div class="row">
<div class="col-md-3"></div>
<div class = "signup">
<h1>Sign Up!</h1>

<%=form_for @user do |f| %>

	<%=f.text_field :name, :placeholder => "Enter Your Name", class: "form-control" %><br>
	<%=f.text_field :username, :placeholder => "Enter Your Username", class: "form-control"  %><br>
	<%=f.text_field :email, :placeholder => "Enter Your Email", class: "form-control"  %><br>
	<%=f.text_field :rating, :placeholder => "Enter Your Social Karma", class: "form-control"  %><br>
	<%=f.password_field :password, :placeholder => "Enter Your Password", class: "form-control"  %><br>
	<%=f.submit "Create New Account" %>
</div>
<% end %>

<%=button_to "Back", {:controller => 'users', :action => 'index'}, {:method => :get} %>

